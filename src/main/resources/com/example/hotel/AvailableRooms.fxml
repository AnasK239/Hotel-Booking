<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotel.AvailableRoomsController">
    <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <Label layoutX="20" layoutY="20" style="-fx-font-size: 18px;" text="Available Rooms" />

        <TableView fx:id="roomsTable" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="roomNumberCol" prefWidth="140" text="Room Number" />
                <TableColumn fx:id="roomTypeCol" prefWidth="140" text="Type" />
                <TableColumn fx:id="priceCol" prefWidth="140" text="Price" />
                <TableColumn fx:id="availabilityCol" prefWidth="199.0" text="Availability" />
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button fx:id="backbtn" mnemonicParsing="false" onAction="#handlebackbtn" text="Back" />
        </HBox>
    </VBox>
</AnchorPane>
